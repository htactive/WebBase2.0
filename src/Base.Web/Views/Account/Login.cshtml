@{
    Layout = "~/Views/Shared/_LayoutDynamic.cshtml";
}

@model Base.Web.Models.LoginViewModel

<div class="panel-body">
    <form class="form-horizontal mt0" asp-action="login" asp-controller="account" method="post" id="login-form" role="form">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="form-group has-error">
                <div class="col-lg-12">
                    <span class="help-block text-center">@Model.ErrorMessage</span>
                </div>
            </div>

        }
        <div class="form-group">
            <div class="col-lg-12">
                <div class="input-group input-icon">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>

                    @Html.TextBoxFor(x => x.UserName, "", new { type = "text", @class = "form-control", placeholder = "Tên đăng nhập" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <div class="input-group input-icon">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    @Html.TextBoxFor(x => x.Password, "", new { type = "password", @class = "form-control", placeholder = "Mật khẩu" })
                </div>
                <span class="help-block text-right"><a href="#">Quên mật khẩu ?</a></span>
            </div>
        </div>
        <div class="form-group mb0">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-8">
                <div class="checkbox-custom">
                    @Html.CheckBoxFor(x => x.IsRememberMe, new { type = "checkbox" })
                    <label for="remember">Ghi nhớ tôi ?</label>
                </div>
            </div>
            @Html.HiddenFor(x => x.RedirectUrl)
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-4 mb25">
                <button class="btn btn-primary pull-right" type="submit">Đăng nhập</button>
            </div>
        </div>
    </form>
</div>